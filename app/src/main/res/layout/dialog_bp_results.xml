<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/feature_card_background">

    <!-- Header Section -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure Analysis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- BP Values Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bpValuesCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <!-- Systolic -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Systolic"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/systolicValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#00FF88"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#444444"
                android:layout_marginHorizontal="16dp" />

            <!-- Diastolic -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diastolic"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/diastolicValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#00FF88"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textColor="#888888"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Category and Heart Rate -->
    <LinearLayout
        android:id="@+id/categorySection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bpValuesCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BP Category -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/bpCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00FF88"
                    android:layout_marginTop="4dp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Heart Rate -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/heartRateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72 BPM"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00BFFF"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Details Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/categorySection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Confidence -->
            <TextView
                android:id="@+id/confidenceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: 85%"
                android:textColor="#CCCCCC"
                android:textSize="14sp" />

            <!-- Risk Level -->
            <TextView
                android:id="@+id/riskLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk Level: Low"
                android:textColor="#00FF88"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Recommendation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendation:"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintain healthy lifestyle habits including regular exercise and balanced diet"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Disclaimer -->
    <TextView
        android:id="@+id/disclaimerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="⚠️ This is for informational purposes only. Consult a healthcare professional for medical advice."
        android:textColor="#FFA500"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/detailsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 